---
import Brand from "/images/logo.svg";
import LeafImg from "/images/greenLeaf2.webp";
import LeafImg1 from "/images/greenLeaf3.webp";
import FooterBg from "/images/willian-justen-de-vasconcellos-_MMP5j_fCqw-unsplash_footer.webp";

import ClipPath from "./ClipPath.astro";

declare interface Props {
  footerText: string;
}

const { footerText } = Astro.props as Props;
---

<style lang="scss">
  .footer-background {
    clip-path: url(#footerImgFrame1);

    @media screen and (min-width: 768px) {
      clip-path: url(#footerImgFrame);
    }
  }
</style>

<footer class="relative">
  <div class="relative footer" role="contentinfo">
    <ClipPath
      id="footerImgFrame"
      path="M0 1V0h.956C.981.012 1 .081 1 .16S.995.318.981.458C.972.552.975.614.968.71.962.797.925 1 .882 1"
    />

    <ClipPath
      id="footerImgFrame1"
      path="M0 1V0h.918S.98.021.989.129c.01.12-.003.243-.007.367C.979.593 1.01.827.997 1"
    />

    <img
      src={FooterBg}
      class="h-full w-full absolute z-10 top-0 footer-background"
      style="object-fit: cover;"
    />

    <div class="relative h-full z-20">
      <div class="wrapper h-full footerContainer flex flex-wrap">
        <div
          class="grid md:flex md:flex-wrap items-center footerContentContainer"
        >
          <div class="footerBrandLogo">
            <a href="/"
              ><img src={Brand} class="w-full h-full" alt="brand-logo" />
            </a>
          </div>
          <div class="grid md:flex flex-wrap items-center footerItemContainer">
            <div class="footerItem">
              <a href="/crowdfunding">Crowdfunding</a>
            </div>
            <div class="footerItem">
              <a href="/blog">Blog</a>
            </div>
            <div class="footerItem">
              <a href="/howto">How-to</a>
            </div>
          </div>
        </div>

        <div class="w-full flex justify-center mt-auto">
          <p class="text-center copyrightTxt" set:html={footerText}></p>
        </div>
      </div>
    </div>
  </div>
  <div
    class="absolute flex mt-auto md:items-end -top-16 md:-top-1.5 right-0 z-30"
  >
    <div class="footerLeaf">
      <img
        class="hidden md:block w-full h-full"
        src={LeafImg}
        alt="tea-leaf-image"
      />
      <img
        class="block md:hidden w-full h-full"
        src={LeafImg1}
        alt="tea-leaf-image"
      />
    </div>
  </div>
</footer>
