---
const { goalText, supportersText, supportersCount, totalAmountRaised } =
  Astro.props;
---

<style lang="scss">
  @use "src/styles/colors";

  .progress-header {
    line-height: 130%;
    letter-spacing: -0.02em;
    font-size: clamp(28px, 2vw + 1px, 40px);
  }

  .progress-text {
    line-height: 140%;
    color: rgba(227, 223, 222, 0.65);
    font-size: clamp(1rem, 1.5vw + 0.1rem, 1.25rem);
  }

  .progress-bar {
    background-color: colors.$crowdfunding-progress;
  }

  .progressContent {
    width: clamp(50px, 18vw + 120px, 400px);
  }
</style>

<div
  class="relative w-full sm:w-auto p-0 mx-auto sm:mx-0 sm:-ml-[60px] 2xl:ml-0"
>
  <div
    class="progress-header font-bold pt-[clamp(10px,7.5vw-9px,36px)] sm:pt-0"
  >
    â‚¬<span class="total-amount-raised">{totalAmountRaised}</span>
  </div>

  <div class="flex flex-wrap justify-between gap-x-1.5">
    <div class="progress-text">{goalText}</div>

    <div class="progress-text">
      <span
        class="supporters-count font-medium text-lightgray text-[1.5rem] sm:text-[1.625rem] leading-none"
      >
        {supportersCount}
      </span>
      {supportersText}
    </div>
  </div>

  <div class="bg-lightgray w-full mt-1 sm:mt-2 md:mt-3 rounded-full">
    <div
      style="width: 0%"
      class="progress-bar py-1.5 rounded-full"
    >
    </div>
  </div>
</div>
