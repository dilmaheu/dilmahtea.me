---
import { parseHTML } from "linkedom";
const contentHTML = await Astro.slots.render("default");
const { document: contentBody } = await parseHTML(contentHTML);
const contentImages = contentBody.querySelectorAll("#detailedBlog img");
[...contentImages].forEach((img) => {
  img.outerHTML = `<img
    src="${
      // @ts-ignore
      img.src
    }"
    class="w-full h-full"
    style="clip-path: url(#content-images-curve);"
  />`;
});
---

<Fragment set:html={contentBody.toString()} />
