---
import FilteredProducts from "@solid/FilteredProducts";

let {
  page,
  recurData,
  checkoutRecurData,
  white_love,
  white_right_arrow,
  category,
  subCategory,
} = Astro.props;

const alertCircleIcon = await Astro.slots.render("alertCircleIcon"),
  shoppingCartIcon = await Astro.slots.render("shoppingCartIcon");

page = {
  Aria_label_all_teas_text: page.Aria_label_all_teas_text,
  Aria_label_tea_item_text: page.Aria_label_tea_item_text,
};

recurData = {
  Item_stock_text: recurData.Item_stock_text,
  Product_sold_out_text: recurData.Product_sold_out_text,
  Product_stock_other_formats_text: recurData.Product_stock_other_formats_text,
};

checkoutRecurData = {
  text_add: checkoutRecurData.text_add,
};
---

<FilteredProducts
  client:load
  alertCircleIcon={alertCircleIcon}
  shoppingCartIcon={shoppingCartIcon}
  page={page}
  recurData={recurData}
  checkoutRecurData={checkoutRecurData}
  white_love={white_love}
  white_right_arrow={white_right_arrow}
  category={category}
  subCategory={subCategory}
>
  <slot name="alertCircleIcon" slot="alertCircleIcon" />
  <slot name="shoppingCartIcon" slot="shoppingCartIcon" />
</FilteredProducts>
