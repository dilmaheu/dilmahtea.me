---
import subset from "@utils/shared/subset";
import FilteredProducts from "@solid/FilteredProducts";

let { page, recurData, white_love, category, subCategory } = structuredClone(
  Astro.props,
);

page = subset(page, ["Aria_label_all_teas_text", "Aria_label_tea_item_text"]);

recurData = subset(recurData, [
  "Item_stock_text",
  "text_sold_out",
  "product_made_love_from",
  "Product_stock_available_text",
  "Product_available_text",
  "Product_other_formats_text",
  "Product_other_formats_singular_text",
  "Product_other_formats_text_sm",
  "Product_other_formats_singular_text_sm",
  "text_add",
  "text_buy",
]);
---

<FilteredProducts
  client:load
  page={page}
  recurData={recurData}
  white_love={white_love}
  category={category}
  subCategory={subCategory}
>
  <slot name="alertCircleIcon" slot="alertCircleIcon" />
</FilteredProducts>
