---
import subset from "@utils/shared/subset";
import CheckoutInformationForm from "@solid/CheckoutInformationForm";

let { recurData, userAccountRecurData, text_select_or_create_tag } =
  Astro.props;

recurData = subset(recurData, [
  "text_first_name",
  "first_name_placeholder",
  "text_last_name",
  "last_name_placeholder",
  "text_country",
  "country_placeholder",
  "text_city",
  "city_placeholder",
  "text_street",
  "street_placeholder",
  "text_postal_code",
  "postal_code_placeholder",
  "countries",
]);

userAccountRecurData = subset(userAccountRecurData, [
  "Label_tag_text",
  "Tag_others_text",
  "Tag_others_placeholder_text",
  "Tag_suggestions",
  "text_more_address",
  "text_hide_more_address",
]);
---

<CheckoutInformationForm
  client:load
  {recurData}
  {userAccountRecurData}
  text_select_or_create_tag={text_select_or_create_tag}
/>
