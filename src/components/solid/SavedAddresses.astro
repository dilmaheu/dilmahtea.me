---
import { Icon } from "astro-icon/components";
import subset from "@utils/shared/subset";
import SavedAddresses from "@solid/SavedAddresses";
import notificationIcons from "@utils/notificationIcons";

let { recurData } = Astro.props;

recurData = subset(recurData, [
  "text_first_name",
  "first_name_placeholder",
  "text_last_name",
  "last_name_placeholder",
  "text_country",
  "country_placeholder",
  "text_city",
  "city_placeholder",
  "text_street",
  "street_placeholder",
  "text_postal_code",
  "postal_code_placeholder",
  "countries",
  "Label_tag_text",
  "label_auto_tag",
  "Tag_default_text",
  "Tag_add_text",
  "Tag_add_placeholder",
  "Tag_suggestions",
  "text_add",
  "text_update",
  "text_save",
  "text_cancel",
  "text_add_new_address",
  "Checkbox_set_default_delivery_address_text",
  "Checkbox_set_default_billing_address_text",
  "text_saved_Addresses",
  "text_more_address",
  "text_hide_more_address",
  "text_content",
  "text_default_delivery_address",
  "text_default_billing_address",
  "Notification_added_address",
  "Notification_updated_address",
  "Notification_deleted_address",
]);
---

<SavedAddresses client:load {recurData} {notificationIcons}>
  <svg
    slot="plusIcon"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="button-icon"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-width="2"
      d="M12 5v14m-7-7h14"></path>
  </svg>

  <Icon
    slot="trashCanIcon"
    name="mdi:trash-can-outline"
    class="w-6 text-error-dark"
  />
</SavedAddresses>
