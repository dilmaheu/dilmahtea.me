<script is:inline>
  {
    const hero = document.querySelector(".hero"),
      navigation = document.querySelector("#navigation");

    const updateHeroTopMargin = () => {
      hero.style.marginTop = `-${navigation.getBoundingClientRect().height}px`;
    };

    updateHeroTopMargin();

    window.addEventListener("resize", updateHeroTopMargin);
  }
</script>
