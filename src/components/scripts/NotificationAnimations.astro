<script is:inline>
  const animationDuration =
    window.innerWidth > 1000 ? 300 : window.innerWidth / (10 / 3);

  const slideOutTopNotification = (notification) => {
    notification.animate(
      { left: ["0vw", `-100vw`] },
      animationDuration
    ).onfinish = () => {
      notification.style.display = "none";
    };
  };

  const removeTopNotification = (notification) => {
    const isNotError = !notification.classList.contains("notification-error");

    isNotError &&
      setTimeout(() => {
        slideOutTopNotification(notification);
      }, 7500);
  };
</script>
