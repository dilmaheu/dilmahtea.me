<script is:inline>
  {
    const animationDuration = Math.min(300, window.innerWidth / (10 / 3));

    window.slideOutTopNotification = (notification) => {
      const animation = notification.animate(
        { left: ["0vw", `-100vw`] },
        animationDuration
      );

      animation.onfinish = () => {
        notification.style.display = "none";
      };
    };
  }
</script>
