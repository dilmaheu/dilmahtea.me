  text_more_address,
  Address_tag: address_tag,
  Label_order,
  text_content,
  text_estimated_delivery,
  text_estimated_shipment,
  text_delivered,
  text_more_products_in_this_order,
} = userAccountRecurData;

const {
  Meta: { URL_slug: userAccountAddress_url },
