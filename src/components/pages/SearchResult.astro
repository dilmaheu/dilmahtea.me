---
const { page, recurData, ariaLabelRecurData } = Astro.props;
---

<div>
  <div class="wrapper grid gap-[25px] my-[50px]">
    {
      page.Breadcrumb && (
        <div class="flex flex-wrap gap-2 recoleta text-2xl leading-[110%] text-primary">
          {page.Breadcrumb?.Steps.map((step, index) => (
            <div class="flex items-center gap-2">
              {index > 0 && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="8"
                  height="17"
                  viewBox="0 0 8 16.7"
                >
                  <path
                    d="M.3,16.3a1.4,1.4,0,0,1,0-1.7L5.4,8.3.3,2.1A1.1,1.1,0,0,1,0,1.3,1.7,1.7,0,0,1,.3.3,1.1,1.1,0,0,1,1.1,0a.9.9,0,0,1,.7.3L7.7,7.5a1.1,1.1,0,0,1,.3.8,1.7,1.7,0,0,1-.3,1l-5.9,7a.7.7,0,0,1-.7.4A.9.9,0,0,1,.3,16.3Z"
                    style="fill:#547B7D"
                  />
                </svg>
              )}
              <a href={step.Link}>{step.Name}</a>
            </div>
          ))}
        </div>
      )
    }

    <div 
      class:list={[
        "recoleta text-[clamp(28px,calc(1.5vw+18.4px),40px)]",
        "font-bold leading-[110%] sm:leading-[115%] text-black",
      ]}
    >
      {page.Title.replaceAll("<search>", "Green tea")}
    </div>
  </div>
</div>