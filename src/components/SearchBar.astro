    display: grid;
    gap: 10px !important;

    .er_ecom_horizontal_product_list {
      margin-top: 0 !important;
    }

    @media (min-width: 768px) {
      gap: 20px !important;
    }
  }

  .er_ecom_horizontal_result_container .ecom_mob_9 {
    display: flex;
    align-items: center;
