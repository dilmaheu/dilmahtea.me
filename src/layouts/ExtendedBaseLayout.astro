---
import CMS from "@store/CMS";

import Markdown from "@astrojs/markdown-component";

import Hero from "@components/Hero.astro";
import HeroContent from "@components/HeroContent.astro";
import RelevantPosts from "@components/RelevantPosts.astro";
import ClippedPicture from "@components/ClippedPicture.astro";

import RecurringImages from "@store/RecurringImages";

const { white_cup } = RecurringImages;

const {
    page,
    plainTitle,
    relatedPosts,
    headerBackground,
    relatedPostsText,
    relatedPostsHeading,
  } = Astro.props,
  { locale } = page,
  { ASSETS_URL } = import.meta.env;

const ariaLabelRecurData = CMS.get("ariaLabelRecurringElement", locale);
---

{/* Hero Section */}
<HeroContent {page} {plainTitle} {headerBackground} />

{/* page sections */}
<slot />

<RelevantPosts
  {page}
  posts={relatedPosts}
  text={relatedPostsText}
  heading={relatedPostsHeading}
/>
